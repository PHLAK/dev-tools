{
    "name": "phlak/dev-tools",
    "description": "Packages and tools for development",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Chris Kankiewicz",
            "email": "Chris@ChrisKankiewicz.com"
        }
    ],
    "require": {
        "php": "^8.0 || ^8.1",
        "captainhook/captainhook": "^5.0",
        "captainhook/plugin-composer": "^5.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phlak/coding-standards": "^2.0",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.0",
        "psy/psysh": "^0.11.0",
        "symfony/console": "^5.0"
    },
    "require-dev": {
        "yoast/phpunit-polyfills": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "PHLAK\\DevTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/toolbox"
    ],
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "captainhook/plugin-composer": true
        }
    }
}
